<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectTest</title>

    <!-- Bootstrap CSS (apenas a versão mais recente) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome para ícones -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- CSS do Projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectTest.styles.css" asp-append-version="true" />

    <!-- CSS específico para a Navbar -->
    <link rel="stylesheet" href="~/css/Navbar.css">

</head>
<body>

   

    <header >
        <!-- Navbar responsiva -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="/image/capa/LOGO E SLOGAN (3).jpg" alt="Açai Delight" class="logo-img me-2">
                    <span class="fw-bold text-success">Açai Delight</span>
                </a>

                <style>
                    .logo-img {
                    width: 50px;  /* Ajuste o tamanho conforme necessário */
                    height: 50px; /* Mantém a proporção */
                    border-radius: 50%; /* Deixa a imagem circular */
                    object-fit: cover; /* Garante que a imagem preencha o círculo corretamente */
                    }

                </style>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (!string.Equals(ViewContext.RouteData.Values["action"]?.ToString(), "Index", StringComparison.OrdinalIgnoreCase))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-medium" href="@Url.Action("Index", "Home")">Voltar ao menu inicial</a>
                            </li>
                        }

                    </ul>

                    <div class="d-flex align-items-center">
                        <label for="horarioSelect" class="me-2 mb-0 text-muted">Horários de funcionamento</label>
                        <select class="form-select" id="horarioSelect" aria-label="Horários de funcionamento" style="max-width: 250px; flex-shrink: 0;">
                            <option value="" disabled selected>Horário de funcionamento</option>
                            <option value="" disabled>Segunda - feira: 14:00 às 2:00</option>
                            <option value="" disabled>Terça - feira: 14:00 às 2:00</option>
                            <option value="" disabled>Quarta - feira: 14:00 às 2:00</option>
                            <option value="" disabled>Quinta - feira: 14:00 às 2:00</option>
                            <option value="" disabled>Sexta - feira: 14:00 às 2:00</option>
                            <option value="" disabled>Sábado: 14:00 às 2:00</option>
                            <option value="" disabled>Domingo: 14:00 às 2:00</option>
                        </select>
                    </div>

                 




                </div>
            </div>
        </nav>


    </header>



    <!-- Conteúdo Principal -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/carousel.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
